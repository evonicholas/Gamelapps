<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:layout_marginTop="8dp"
        android:id="@+id/checkBoxAngklung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Angklung" />
    <CheckBox
        android:id="@+id/checkBoxBonang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bonang" />
    <CheckBox
        android:id="@+id/checkBoxSuling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Suling" />
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/checkBoxSuling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/dialogButtonQueueCancel"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Cancel"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/dialogButtonQueueOk"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"

                android:layout_marginBottom="16dp"
                android:text="OK" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>